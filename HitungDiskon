    private void btnHitungActionPerformed(java.awt.event.ActionEvent evt) {
        try {
            double harga = Double.parseDouble(txtHarga.getText());
            double diskon = Double.parseDouble(txtDiskon.getText());
            double potongan = harga * diskon / 100;
            double total = harga - potongan;
            txtTotal.setText(String.format("%.2f", total));
        } catch (NumberFormatException e) {
            javax.swing.JOptionPane.showMessageDialog(this, "Masukkan angka yang valid!", "Error", javax.swing.JOptionPane.ERROR_MESSAGE);
        }
    }

    private void btnResetActionPerformed(java.awt.event.ActionEvent evt) {
        txtHarga.setText("");
        txtDiskon.setText("");
        txtTotal.setText("");
    }

    private void btnKeluarActionPerformed(java.awt.event.ActionEvent evt) {
        System.exit(0);
    }

